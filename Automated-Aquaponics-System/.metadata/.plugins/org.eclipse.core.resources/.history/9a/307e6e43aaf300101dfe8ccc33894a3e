/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
  /* USER CODE BEGIN MX_GPIO_Init_1 */

  /* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOC, GPIO_PIN_8|GPIO_PIN_9, GPIO_PIN_RESET);

  /*Configure GPIO pin : PC3 */
  GPIO_InitStruct.Pin = GPIO_PIN_3;
  GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(GPIOC, &GPIO_InitStruct);

  /*Configure GPIO pins : PC8 PC9 */
  GPIO_InitStruct.Pin = GPIO_PIN_8|GPIO_PIN_9;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOC, &GPIO_InitStruct);

  /* USER CODE BEGIN MX_GPIO_Init_2 */

  /* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */

// TIM3는 APB1 타이머. prescaler가 1이 아니면 TIM clk = PCLK1*2
static uint32_t TIM3_GetClockHz(void)
{
  uint32_t pclk1 = HAL_RCC_GetPCLK1Freq(); // APB1 버스 클럭 PCLK1을 알려줌 (예: 42MHz)
  // RCC_CFGR.PPRE1이 DIV1이 아니면 타이머 클럭 2배
  if ((RCC->CFGR & RCC_CFGR_PPRE1) != RCC_CFGR_PPRE1_DIV1) return pclk1 * 2; // RCC->CFGR & RCC_CFGR_PPRE1은 APB1 Prescaler(분주)가 DIV1인지 아닌지 확인
  return pclk1;
}
static void StepPWM_SetHz(uint32_t hz) // 원하는 hz로 PWM(=STEP) 만들기
{
  if (hz < 1) hz = 1;

  uint32_t tim_clk = TIM3_GetClockHz();

  // 간단하게 PSC=0 고정하고 ARR로만 맞춤
  uint32_t arr = (tim_clk / hz) - 1;

  __HAL_TIM_SET_PRESCALER(&htim3, 0);
  __HAL_TIM_SET_AUTORELOAD(&htim3, arr);
  __HAL_TIM_SET_COMPARE(&htim3, TIM_CHANNEL_1, arr / 2); // 50% duty
  __HAL_TIM_SET_COUNTER(&htim3, 0);
}

void Motor_SetDir(bool dir) // DIR설정
{
  HAL_GPIO_WritePin(DIR_PORT, DIR_PIN, dir ? GPIO_PIN_SET : GPIO_PIN_RESET);
}

void Motor_Enable(bool en) // EN설정
{
  // EN 극성은 장치 설정에 따라 다를 수 있음.
  // LCD에서 En=Hold로 두면 이 함수 없어도 됨.
  HAL_GPIO_WritePin(EN_PORT, EN_PIN, en ? GPIO_PIN_SET : GPIO_PIN_RESET);
}

void Motor_Start(uint32_t step_hz) // 모터 구동
{
  StepPWM_SetHz(step_hz);
  HAL_TIM_PWM_Start(&htim3, TIM_CHANNEL_1);
}

void Motor_Stop(void) // 모터 정지
{
  HAL_TIM_PWM_Stop(&htim3, TIM_CHANNEL_1);
}

static uint16_t DMS80_ReadRaw(void) // ADC 변환 시작 → 변환 끝날 때까지 기다림(최대 10ms) → 결과(0~4095) 읽기 → 종료
{
  HAL_ADC_Start(&hadc1);
  HAL_ADC_PollForConversion(&hadc1, 10);
  uint16_t raw = (uint16_t)HAL_ADC_GetValue(&hadc1);
  HAL_ADC_Stop(&hadc1);
  return raw;
}
static float DMS80_ReadVoltageAvg(int n) // DMS80_ReadRaw()를 n번 읽어서 평균낸 다음 3.3 * raw / 4095 으로 전압으로 변환
{
  uint32_t sum = 0;
  for(int i=0;i<n;i++) sum += DMS80_ReadRaw();
  float raw = (float)sum / n;
  return (3.3f * raw) / 4095.0f;
}
static float DMS80_VoltageToCm(float v) // 전압 → 거리(cm) 변환 함수 // 실제 정확도를 올리려면 10cm/30cm/80cm 같은 2~3점만 실측해서 테이블 숫자를 보정하면 정확도가 올라감
{
  // 범위 밖 처리(대충 클램프)
  if (v >= dms80_map[0].v) return dms80_map[0].cm;
  if (v <= dms80_map[7].v) return dms80_map[7].cm;

  // v는 내려가는 값이므로 구간 찾기
  for (int i = 0; i < 7; i++)
  {
    float v1 = dms80_map[i].v,   c1 = dms80_map[i].cm;
    float v2 = dms80_map[i+1].v, c2 = dms80_map[i+1].cm;
    if (v <= v1 && v >= v2)
    {
      float t = (v - v1) / (v2 - v1); // 0~1
      return c1 + t * (c2 - c1);
    }
  }
  return 80.0f;
}
static uint16_t DMS80_ReadRawAvg(int n) //RAW 평균 함수
{
  uint32_t sum = 0;
  for (int i = 0; i < n; i++) sum += DMS80_ReadRaw();
  return (uint16_t)(sum / n);
}
/* USER CODE END 4 */

