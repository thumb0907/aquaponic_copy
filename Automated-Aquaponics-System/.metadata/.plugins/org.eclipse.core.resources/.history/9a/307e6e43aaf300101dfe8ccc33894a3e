/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
typedef struct { float v; float cm; } VT;
static const VT dms80_map[] = {
  {2.45f, 10.0f},
  {1.20f, 20.0f},
  {0.80f, 30.0f},
  {0.60f, 40.0f},
  {0.48f, 50.0f},
  {0.40f, 60.0f},
  {0.35f, 70.0f},
  {0.32f, 80.0f},
};
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
ADC_HandleTypeDef hadc1;

TIM_HandleTypeDef htim3;

UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
#define DIR_PORT GPIOC 			// 스텝모터 dir핀
#define DIR_PIN  GPIO_PIN_9

#define EN_PORT  GPIOC			// 스텝모터 en핀
#define EN_PIN   GPIO_PIN_8

#define IR_PORT GPIOC			// 적외선센서
#define IR_PIN  GPIO_PIN_3

typedef enum { // 컨베이어 상태 기반 제어
  CONVEYOR_RUN,
  CONVEYOR_STOP
} ConveyorState;
ConveyorState state = CONVEYOR_RUN;
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_TIM3_Init(void);
static void MX_ADC1_Init(void);
static void MX_USART2_UART_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void Motor_SetDir(bool dir);
void Motor_Enable(bool en);
void Motor_Start(uint32_t step_hz);
void Motor_Stop(void);
static uint16_t DMS80_ReadRaw(void);
static uint16_t DMS80_ReadRawAvg(int n);
static float    DMS80_VoltageToCm(float v);
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_TIM3_Init();
  MX_ADC1_Init();
  MX_USART2_UART_Init();
  /* USER CODE BEGIN 2 */
  Motor_SetDir(true);
  Motor_Enable(true);
  //Motor_Start(2000);   // 2kHz: LCD의 0clk가 쭉 올라가야 정상
  HAL_Delay(5000);        // 5초 동안 유지
  Motor_Stop();           // 정지
  Motor_Enable(false);    // 필요할 때만
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    static bool motor_running = false;

    if (state == CONVEYOR_RUN)
    {
      if (!motor_running)
      {
        Motor_SetDir(true);
        Motor_Enable(true);
        Motor_Start(2000);
        motor_running = true;
      }

      // IR 감지 시 정지 (IR이 Active-High라는 가정)
      if (HAL_GPIO_ReadPin(IR_PORT, IR_PIN) == GPIO_PIN_SET)
      {
        Motor_Stop();
        Motor_Enable(false);
        motor_running = false;
        state = CONVEYOR_STOP;
      }
    }
    else // CONVEYOR_STOP
    {
      uint16_t raw = DMS80_ReadRawAvg(16);

      uint32_t mv = (3300UL * raw) / 4095UL;   // ✅ mv 추가
      float v  = (3.3f * raw) / 4095.0f;
      float cm = DMS80_VoltageToCm(v);

      char buf[80];
      int cm10 = (int)(cm * 10.0f);
      int len = snprintf(buf, sizeof(buf),
                         "raw=%u, %lumV, cm=%d.%d\r\n",
                         raw, mv, cm10/10, cm10%10);

      HAL_UART_Transmit(&huart2, (uint8_t*)buf, len, 100);
      HAL_Delay(500);
    }
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
  {
    Error_Handler();
  }
}

